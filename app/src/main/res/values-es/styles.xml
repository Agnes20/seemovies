<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorPrimaryText</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorIcons</item>
    </style>

    <style name="navigationBarTheme" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>

    </style>

</resources>
